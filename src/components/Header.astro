---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;

function isActive(href: string) {
	if (href === '/') {
		return pathname === '/';
	}
	return pathname.startsWith(href);
}
---

<header>
	<nav>
		<a href="/" class="site-title">{SITE_TITLE}</a>
		<div class="nav-right">
			<div class="nav-links">
				<a href="/" class:list={[{ active: isActive('/') }]}>首页</a>
				<a href="/weekly" class:list={[{ active: isActive('/weekly') }]}>周刊</a>
				<a href="/categories" class:list={[{ active: isActive('/categories') }]}>分类</a>
				<a href="/tags" class:list={[{ active: isActive('/tags') }]}>标签</a>
				<a href="/about" class:list={[{ active: isActive('/about') }]}>关于</a>
			</div>
			<ThemeToggle />
		</div>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--header-bg);
		backdrop-filter: saturate(180%) blur(20px);
		-webkit-backdrop-filter: saturate(180%) blur(20px);
		border-bottom: 1px solid var(--header-border);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 720px;
		margin: 0 auto;
		padding: 0.875em 1em;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	.site-title {
		font-size: 1.125em;
		font-weight: 600;
		color: rgb(var(--black));
		text-decoration: none;
		letter-spacing: -0.01em;
	}

	.site-title:hover {
		color: var(--accent);
	}

	.nav-links {
		display: flex;
		gap: 1.75em;
	}

	.nav-links a {
		color: rgb(var(--black));
		text-decoration: none;
		font-size: 0.9375em;
		transition: color 0.2s ease;
	}

	.nav-links a:hover {
		color: var(--accent);
	}

	.nav-links a.active {
		color: var(--accent);
		font-weight: 500;
	}

	@media (max-width: 720px) {
		nav {
			padding: 0.75em 1em;
		}

		.site-title {
			font-size: 1.1em;
		}

		.nav-right {
			gap: 0.75em;
		}

		.nav-links {
			gap: 0.75em;
			font-size: 0.9em;
		}

		.nav-links a {
			padding: 0.25em 0;
		}
	}

	@media (max-width: 480px) {
		.nav-right {
			gap: 0.5em;
		}

		.nav-links {
			gap: 0.5em;
			font-size: 0.85em;
		}
	}
</style>
